<!DOCTYPE html>
<html>
    <head>
        <title>Create Assign</title>
        <link rel="stylesheet" href="/css/style.css">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous">

        
    </head>
    <%- include('../head/head') %>
    <body>
        <h1>Create Assign</h1>
        <form method="post" action="/createAssign">
            <label for="task_id">Task:</label>
            <select id="task_id" name="task_id">
                <% for(var i=0; i<tasks.length; i++) { %>
                    <option value="<%= tasks[i].task_id %>"><%= tasks[i].title %></option>
                <% } %>
            </select>
            <br>
            <label for="user_id">User:</label>
            <select id="user_id" name="user_id">
                <% for(var i=0; i<users.length; i++) { %>
                    <option value="<%= users[i].user_id %>"><%= users[i].username %></option>
                <% } %>
            </select>
            <br>
            <input type="submit" value="createAssign">
        </form>
        
        <a href="/assignments">Back to assignments</a>
    </body>
    <%- include('../head/foot') %>
</html>
